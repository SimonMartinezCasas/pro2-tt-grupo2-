<!DOCTYPE html>
<html lang="es">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link width="" rel="shortcut icon" href="./images/logo-mercado-liebre.jpg" />

	<title> Borrachet</title>
	<!-- Font Awesome Stylesheet -->
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
	<!-- Bootstrap Grid Stylesheet -->
	<link rel="stylesheet" href="./css/bootstrap-grid.min.css">
	<!-- Own Stylesheet -->
	<link rel="stylesheet" href="./css/app.css">
</head>
  <%- include("./partials/header.ejs") %>

<body>
	<!-- Banner -->
	<div class="banner">
		<img class="bannerNuevo" src="/images/imgHomeBanner.jpg" alt="Banner de ofertas">
	</div>
	<!-- /Banner -->

	<!-- Novedades -->
	<div class="container productsWrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="productsTitle">Vodkas</h2>
			</div>
			<!-- Show the "ultimos" products.. -->
			<div class="col-12 col-sm-6 col-lg-3">
				<% for (let i = 0; i < 5; i++) { %>
					<section class="productBox">
						<a href="/products">
							<figure class="productBoxImage">
								<img src=" <%=data[i].imagenDelProducto%>" alt="absolut Raspberry">
							</figure>
							<article class="productBoxData">
								<h2><%= data[i].nombreDelProducto %></h2>
								<p><%= data[i].descripcion %></p>
								<p>Comentarios: <%= data[i].comentarios.length %></p>
							</article>
						</a>
					</section>

				<%} %>
			</div>
		</div>
	</div>
	<!-- /Novedades -->
	<!-- Más comentados -->
	<div class="container productsWrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="productsTitle">Más comentados</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<div class="col-12 col-sm-6 col-lg-3">
				<% for (let i = 5; i < data.length; i++) {  %>
					<section class="productBox">
						<a href="/products">
							<figure class="productBoxImage">
								<img  src="<%=data[i].imagenDelProducto %>" alt="cafetera moulinex">
							</figure>
							<article class="productBoxData">
								<h2><%= data[i].nombreDelProducto%></h2>
								<p><%=data[i].descripcion %></p>
								<p>Comentarios: <%= data[i].comentarios.length %></p>
							</article>
						</a>
					</section>
				<% } %>
			</div>
		</div>
	</div>
	<!-- /Más comentados -->

	<%- include("./partials/footerLogueado") %>

</body>	
</html>